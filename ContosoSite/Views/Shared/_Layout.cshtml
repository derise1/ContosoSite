<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Сервис у Данилыча</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" type="text/css" href="~/style.css" />
</head>
<body class="bd-lay">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img class="logo" src="~/image/logo.png">
                @Html.ActionLink("Сервис у Данилыча", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Session["login"] != null)
                    {
                        <li>@Html.ActionLink("Заказы", "Index", "заказы")</li>
                        <li>@Html.ActionLink("Авто", "Index", "авто")</li>
                        <li>@Html.ActionLink("Запчасти", "Index", "запчасти")</li>
                        <li>@Html.ActionLink("Поставщики", "Index", "поставщики")</li>
                        <li>@Html.ActionLink("Сотрудники", "Index", "сотрудники")</li>
                    }
                </ul>
                @if (Session["login"] == null)
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Регистрация", "Register", "авторизация", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                        <li>@Html.ActionLink("Выполнить вход", "Login", "авторизация", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                    </ul>
                }
                @if (Session["login"] != null)
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink(@Session["login"].ToString(), "Index", "Home")</li>
                        <li>@Html.ActionLink("Выйти", "LogOut", "Home")</li>
                    </ul>
                }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
