@model ContosoSite.Models.сотрудники

@{
    ViewBag.Title = "";
}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300&family=Readex+Pro:wght@200&display=swap" rel="stylesheet">
<link rel="stylesheet" href="~/style.css">
<h1>Сотрудники</h1>
<h2>Удалить</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            ФИО
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ФИО)
        </dd>

        <dt>
            Дата рождения
        </dt>

        <dd>
            @Html.DisplayFor(model => model.дата_рождения)
        </dd>

        <dt>
            Номер
        </dt>

        <dd>
            @Html.DisplayFor(model => model.номер)
        </dd>

        <dt>
            Должность
        </dt>

        <dd>
            @Html.DisplayFor(model => model.должность)
        </dd>

        <dt>
            Паспортные данные
        </dt>

        <dd>
            @Html.DisplayFor(model => model.паспортные_данные)
        </dd>

        <dt>
            Фото
        </dt>

        <dd>
            @Html.DisplayFor(model => model.фото)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" style="border:none; background-color: #ff3f3f; width: 130px; margin-bottom: 15px;" />
        </div>
    }
    <div class="buttTubDetails" style="width: 130px; margin-bottom: 15px;">@Html.ActionLink("Вернуться назад", "Index")</div>
</div>
